    private void btnAddActionPerformed(java.awt.event.ActionEvent evt) {                                       
        // code to load data into table
        //validation for not leaving blank fields
        if (txtID.getText().equals("") || nameTextField.getText().equals("") || lastNameTextField.getText().equals("")) {
            // if any of the fields is left blank, show message
            JOptionPane.showMessageDialog(this, "Please fill in all fields!");
        } else {
            // if all fields are filled in than
            // store entered data into String array 
            String data[] = {txtID.getText(), nameTextField.getText(), lastNameTextField.getText()};
            DefaultTableModel tblModel = (DefaultTableModel) jTable1.getModel();
            // add string array data
            tblModel.addRow(data); // row added
            // successfully added message
            JOptionPane.showMessageDialog(this, "Fields were filled in successfully!");
            // clear textfield for new entry 
            txtID.setText("");
            nameTextField.setText("");
            lastNameTextField.setText("");

        }
        System.out.println("ID:" + txtID.getText());
        System.out.println("Name:" + nameTextField.getText());
        System.out.println("Last Name:" + lastNameTextField.getText());
    }                                      

    private void btnEditActionPerformed(java.awt.event.ActionEvent evt) {                                        
        // TODO add your handling code here:
        // get table model
        DefaultTableModel tblModel = (DefaultTableModel) jTable1.getModel();
        if (jTable1.getSelectedRowCount() == 1) {
            //if single row selected then update
            String id = txtID.getText();
            String name = nameTextField.getText();
            String lastName = lastNameTextField.getText();

            // set updated value to table row 
            tblModel.setValueAt(id, jTable1.getSelectedRow(), 0);
            tblModel.setValueAt(name, jTable1.getSelectedRow(), 1);
            tblModel.setValueAt(lastName, jTable1.getSelectedRow(), 2);

            //display update message
            JOptionPane.showMessageDialog(this, "Updated successfully!");
        } else {
            if (jTable1.getRowCount() == 0) {
                // if table is empty
                JOptionPane.showMessageDialog(this, "Table is empty!");
            } else {

                // if no row or multiple rows are selected
                JOptionPane.showMessageDialog(this, "Please select single row to be updated!");
            }

    }                                       

    private void btnDeleteActionPerformed(java.awt.event.ActionEvent evt) {                                          
        // TODO add your handling code here:
        //get jTable model first
        DefaultTableModel tblModel = (DefaultTableModel) jTable1.getModel();
        // delete row  
        if (jTable1.getSelectedColumnCount() == 1) {
            //if single row is selected then delete
            tblModel.removeRow(jTable1.getSelectedRow());
        } else {
            if (jTable1.getRowCount() == 0) {
                //if table is empty(no data) than display message
                JOptionPane.showMessageDialog(this, "Table is empty");
            } else {
                {
                    //if table is not empty but row not selected or multiple rows are selected
                    JOptionPane.showMessageDialog(this, "Please select any single row for deletion");
                }

            }
        }
    }                                         

    private void jTable1MouseClicked(java.awt.event.MouseEvent evt) {                                     
        // TODO add your handling code here:
        // set data to textfield
        DefaultTableModel tblModel = (DefaultTableModel) jTable1.getModel();

        // set data to textfield when row is selected
        String txtID = tblModel.getValueAt(jTable1.getSelectedRow(), 0).toString();
        String nameTextField = tblModel.getValueAt(jTable1.getSelectedRow(), 1).toString();
        String lastNameTextField = tblModel.getValueAt(jTable1.getSelectedRow(), 2).toString();

        // set to textfield
        txtID.setText(txtID);
        nameTextField.setText(nameTextField);
        lastNameTextField.setText(lastNameTextField);
    }                                    

    private void lastNameTextFieldActionPerformed(java.awt.event.ActionEvent evt) {                                                  
        // TODO add your handling code here:
    }                                                 

